<main class="container">
  <%= link_to sanitize("&larr; Back to invoices"), invoices_path %>
  <div class="header">
    <h1>
      <%= @invoice.name %>
    </h1>

    <%= link_to "New date",
                new_invoice_line_item_date_path(@invoice),
                data: { turbo_frame: dom_id(LineItemDate.new) },
                class: "btn btn--primary" %>
  </div>

  <%= turbo_frame_tag LineItemDate.new %>
  <%= turbo_frame_tag 'line_item_dates' do %>
    <%= render @line_item_dates, invoice: @invoice %>
  <% end %>
</main>